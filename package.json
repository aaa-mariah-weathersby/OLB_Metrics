{
  "name": "payments",
  "version": "1.0.11",
  "description": "payments",
  "main": "index.js",
  "engines": {
    "node": ">=4.2.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "clean": "rimraf build/*",
    "compile": "better-npm-run compile",
    "copy-package-json": "ncp server/package.json build/package.json",
    "copy-ecosystem": "ncp server/ecosystem.json build/ecosystem.json",
    "copy-test": "ncp testServer/ecosystem.json build/ecosystem.json && ncp server/package.json build/package.json && ncp testServer/help.html build/public/help.html",
    "inject-newrelic": "sed -ib \"1s/^/require('newrelic');/\" build/server.js && rm build/server.jsb",
    "lint": "npm run eslint:fix && npm run sass-lint",
    "eslint": "eslint src specs",
    "eslint:fix": "npm run eslint -- --fix",
    "sass-lint": "sass-lint 'src/styles/**/*.scss' --verbose --no-exit --ignore 'src/styles/base/*.scss'",
    "start": "better-npm-run start",
    "start:mock-api": "better-npm-run start:mock-api",
    "start:mock-debug": "better-npm-run start:mock-debug",
    "start:debug": "better-npm-run start:debug",
    "start:local-api": "better-npm-run start:local-api",
    "start:local-mock-api": "better-npm-run start:local-mock-api",
    "dev": "better-npm-run dev",
    "dev:no-debug": "npm run dev -- --no_debug",
    "test": "better-npm-run test",
    "test:coverage": "better-npm-run test:coverage; nyc report",
    "test:report": "nyc --reporter=text report; nyc report",
    "test:dev": "npm run test -- --watch",
    "build": "better-npm-run build",
    "build:newrelic": "better-npm-run build:newrelic",
    "build:dev": "better-npm-run build:dev",
    "build:production": "better-npm-run build:production",
    "build:test": "better-npm-run build:test",
    "update-version": "npm version patch --no-git-tag-version",
    "update-version:tag": "npm version patch",
    "codecov": "cat coverage/*/lcov.info | codecov"
  },
  "nyc": {
    "exclude": [
      "specs/**/*.js",
      "mocks/**/*.js",
      "devServer/**/*.js"
    ],
    "reporter": [
      "text-summary"
    ]
  },
  "betterScripts": {
    "compile": {
      "command": "babel-node bin/compile",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "dev": {
      "command": "nodemon --exec babel-node bin/devServer",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "build:test": {
      "command": "npm run clean && npm run compile && webpack --config tools/testserver.webpack.config.js && npm run copy-test",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    },
    "build": {
      "command": "npm run clean && npm run compile && webpack --config tools/server.webpack.config.js && npm run copy-package-json && npm run copy-ecosystem",
      "env": {
        "DEBUG": "app:*",
        "NODE_ENV": "production"
      }
    },
    "build:newrelic": {
      "command": "npm run clean && npm run compile && webpack --config tools/server.webpack.config.js && npm run copy-package-json && npm run inject-newrelic",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "build:dev": {
      "command": "npm run build ",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "build:production": {
      "command": "npm run build",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start": {
      "command": "babel-node bin/devServer",
      "env": {
        "NODE_ENV": "development",
        "PORT": 7070,
        "DEBUG": "app:*",
        "NEW_RELIC_APP_NAME": "ENT.WEB.NODE.PAYMENTS.DEV",
        "NEW_RELIC_LICENSE_KEY": "64f0f0c6f7fc363ec98a02bb548d1c3f1c33298d",
        "NEW_RELIC_NO_CONFIG_FILE": true,
        "AUTH0_CERT_URL": "http://localhost:7070/auth0certificate"
      }
    },
    "start:debug": {
      "command": "babel-node --debug-brk bin/devServer",
      "env": {
        "NODE_ENV": "development",
        "PORT": 5000,
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "mocha \"specs/**/*.spec.js\" -t 5000 --require specs/setup.js --compilers js:babel-register",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    },
    "test:coverage": {
      "command": "nyc --reporter=html mocha \"specs/**/*.spec.js\" -t 5000 --require specs/setup.js --compilers js:babel-register",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    },
    "test:report": {
      "command": "nyc --reporter=text test:report",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.9.0",
    "history": "^2.0.0",
    "postcss-loader": "^0.9.0",
    "react": "^15.4.2",
    "react-redux": "4.4.6",
    "react-router": "^2.2.0",
    "react-router-redux": "^4.0.0",
    "redux": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-polyfill": "^6.9.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "better-npm-run": "^0.1.0",
    "body-parser": "^1.18.2",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "chai-enzyme": "^0.5.0",
    "chai-http": "^3.0.0",
    "codecov": "^1.0.1",
    "connect-history-api-fallback": "^1.5.0",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.23.0",
    "cssnano": "^3.3.2",
    "csurf": "^1.9.0",
    "enzyme": "2.4.1",
    "eslint": "^2.10.2",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-config-standard-react": "^3.0.0",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-promise": "^2.0.0",
    "eslint-plugin-react": "^5.0.1",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^1.0.0",
    "file-loader": "^0.9.0",
    "fs": "0.0.1-security",
    "fs-extra": "^5.0.0",
    "git-repository": "^0.1.4",
    "gulp": "^3.9.1",
    "gulp-change": "^1.0.0",
    "gulp-grep-contents": "0.0.1",
    "gulp-print": "^2.0.1",
    "helmet": "^3.12.0",
    "html-webpack-plugin": "^3.1.0",
    "ip": "^1.1.5",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^9.12.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mocha": "^2.2.5",
    "ncp": "^2.0.0",
    "nock": "^9.2.3",
    "node-sass": "^3.7.0",
    "nodemon": "^1.8.1",
    "normalize.css": "^4.1.1",
    "nyc": "^10.3.0",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "redbox-react": "1.3.4",
    "redux-logger": "^2.8.1",
    "redux-mock-store": "^1.5.1",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2",
    "sass-lint": "^1.9.1",
    "sass-loader": "^4.0.0",
    "sinon": "^1.17.3",
    "sinon-as-promised": "^4.0.3",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.6",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.6.0",
    "webpack-sources": "^1.1.0",
    "yargs": "^4.0.0"
  }
}
